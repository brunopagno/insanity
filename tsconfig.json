{
  "compilerOptions": {
    "lib": ["esnext"],
    "module": "nodenext",
    "target": "es2022",

    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "strict": true,

    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "nodenext",
    "resolveJsonModule": true
  }
}
