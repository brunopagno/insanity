{
  "compilerOptions": {
    "lib": ["esnext"],
    "module": "nodenext",
    "target": "es2022",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "nodenext",
    "outDir": "dist",
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts", "src/index.mts"]
}
